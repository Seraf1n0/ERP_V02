@page
@model ERP.Pages.Ventas.CotizacionesModel
@{
    Layout = "_LayoutVentas";
}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .container {
        display: flex;
        flex-direction: column;
        box-shadow: 8px 8px 0px #bdbdbdbf;
        width: 80%;
        background-color: #ffffff;
        border-radius: 30px;
    }

    .container .table_header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 30px 0;
    }

    .BotonCrearNuevo {
        outline: none;
        border: none;
        background-color: #13232f;
        color: #ffffff;
        padding: 10px 30px;
        border-radius: 20px;
        font-size: 14px;
        cursor: pointer;
        &:hover

        {
        background-color: #13233f;
        }

    }

    .BotonEliminar {
        outline: none;
        border: none;
        background-color: #13232f;
        color: #ffffff;
        padding: 10px 30px;
        border-radius: 20px;
        font-size: 14px;
        cursor: pointer;
        &:hover

        {
        background-color: #13233f;
        }

    }

    table {
        border-spacing: 0;
        margin-top: 1rem;
    }

    thead {
        background-color: #13232f;
        color: white;
    }

    th {
        padding: 10px;
    }

    tbody tr td {
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #dfdfdf;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
        margin: 1rem 2rem;
    }
</style>

<div class="container">
    <div class="table_header">
        <h2>Cotizaciones</h2>
        <!-- Botones para acciones depende del seleccionado -->
        <button class="BotonCrearNuevo" onclick="abrirVentana('CrearCotizacion')">Crear nueva cotización</button>
        <button class="BotonEliminar">Eliminar</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Cédula Cliente</th>
                <th>Cédula Vendedor</th>
                <th>Orden de Compra</th>
                <th>Fecha</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cotizacion in Model.cotizaciones)
            {
                <tr>
                    <td>@cotizacion.CedulaCliente</td>
                    <td>@cotizacion.CedulaEmpleado</td>
                    <td>@cotizacion.ID</td> <!-- Esto sería la Orden de Compra (SE busca por coincidencias de ID) -->
                    <td>@cotizacion.FechaHora.ToString("dd/MM/yyyy")</td>
                    <td>@cotizacion.MontoTotal</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="table_footer">
        <p>Total de cotizaciones: @Model.cotizaciones.Count()</p>
    </div>
</div>

<script>
    function abrirVentana(ventana) {

        window.location.href = ventana;
    }
</script>